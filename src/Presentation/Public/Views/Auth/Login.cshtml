@model EazyMenu.Public.Models.RequestLoginViewModel
@{
    ViewData["Title"] ??= "ورود با پیامک";
}

<section class="auth-login py-5" dir="rtl">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-xl-5">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <h1 class="h4 mb-3 text-center">ورود کاربران</h1>
                        <p class="text-muted text-center mb-4">برای ورود شماره موبایل خود را وارد کنید تا کد تأیید پیامکی ارسال شود.</p>

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <form asp-action="Login" asp-controller="Auth" method="post" novalidate>
                            @Html.AntiForgeryToken()
                            <input asp-for="TenantId" type="hidden" />
                            <div class="mb-3">
                                <label asp-for="PhoneNumber" class="form-label"></label>
                                <input asp-for="PhoneNumber" class="form-control form-control-lg text-center" placeholder="مثال: +989121234567" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">ارسال کد تأیید</button>
                            </div>
                        </form>

                        <div class="text-center mt-4">
                            <small class="text-muted">با ورود، قوانین حریم خصوصی و شرایط استفاده را می‌پذیرید.</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
