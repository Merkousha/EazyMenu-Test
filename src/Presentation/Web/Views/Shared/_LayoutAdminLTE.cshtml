<!doctype html>
<html lang="fa" dir="rtl">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EazyMenu</title>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/vazirmatn@33.0.3/Vazirmatn-font-face.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/overlayscrollbars@2.11.0/styles/overlayscrollbars.min.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/lib/adminlte/css/adminlte.rtl.css" />
    <link rel="stylesheet" href="~/css/adminlte-rtl-custom.css" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="layout-fixed sidebar-expand-lg sidebar-open bg-body-tertiary">
    <div class="app-wrapper">
        <nav class="app-header navbar navbar-expand bg-body">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-lte-toggle="sidebar" href="#" role="button">
                            <i class="bi bi-list"></i>
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item dropdown user-menu">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                                <img src="~/lib/adminlte/assets/img/avatar.png" class="user-image rounded-circle shadow" alt="User Image" />
                                <span class="d-none d-md-inline">@User.Identity.Name</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-end">
                                <li class="user-header text-bg-primary">
                                    <img src="~/lib/adminlte/assets/img/avatar.png" class="rounded-circle shadow" alt="User Image" />
                                    <p>
                                        @User.Identity.Name
                                        <small>@ViewBag.UserRole</small>
                                    </p>
                                </li>
                                <li class="user-footer">
                                    <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-default btn-flat">تغییر رمز</a>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-default btn-flat float-end">خروج</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-left"></i> ورود
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
        
        <aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
            <div class="sidebar-brand">
                <a href="/" class="brand-link">
                    <img src="~/lib/adminlte/assets/img/AdminLTELogo.png" alt="EazyMenu Logo" class="brand-image opacity-75 shadow" />
                    <span class="brand-text fw-light">EazyMenu</span>
                </a>
            </div>
            
            <div class="sidebar-wrapper">
                <nav class="mt-2">
                    <ul class="nav sidebar-menu flex-column" data-lte-toggle="treeview" role="navigation" data-accordion="false">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                            
                            <li class="nav-item">
                                <a asp-controller="Dashboard" asp-action="Index" class="nav-link @(currentController == "Dashboard" ? "active" : "")">
                                    <i class="nav-icon bi bi-speedometer2"></i>
                                    <p>داشبورد</p>
                                </a>
                            </li>
                            
                            <li class="nav-item">
                                <a asp-controller="Menus" asp-action="Index" class="nav-link @(currentController == "Menus" ? "active" : "")">
                                    <i class="nav-icon bi bi-book"></i>
                                    <p>مدیریت منو</p>
                                </a>
                            </li>
                            
                            <li class="nav-item">
                                <a asp-controller="Orders" asp-action="Index" class="nav-link @(currentController == "Orders" ? "active" : "")">
                                    <i class="nav-icon bi bi-basket"></i>
                                    <p>سفارش‌ها</p>
                                </a>
                            </li>
                            
                            <li class="nav-item">
                                <a asp-controller="Reservations" asp-action="Index" class="nav-link @(currentController == "Reservations" ? "active" : "")">
                                    <i class="nav-icon bi bi-calendar-check"></i>
                                    <p>رزرو میز</p>
                                </a>
                            </li>
                            
                            <li class="nav-header">اعلان‌ها</li>
                            
                            <li class="nav-item">
                                <a asp-controller="Notifications" asp-action="SmsLogs" class="nav-link @(currentController == "Notifications" ? "active" : "")">
                                    <i class="nav-icon bi bi-chat-dots"></i>
                                    <p>گزارش پیامک‌ها</p>
                                </a>
                            </li>
                            
                            <li class="nav-header">تنظیمات</li>
                            
                            <li class="nav-item">
                                <a asp-controller="Account" asp-action="ChangePassword" class="nav-link">
                                    <i class="nav-icon bi bi-key"></i>
                                    <p>تغییر رمز عبور</p>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Index" class="nav-link">
                                    <i class="nav-icon bi bi-house"></i>
                                    <p>خانه</p>
                                </a>
                            </li>
                            
                            <li class="nav-item">
                                <a asp-controller="Account" asp-action="Login" class="nav-link">
                                    <i class="nav-icon bi bi-box-arrow-in-left"></i>
                                    <p>ورود</p>
                                </a>
                            </li>
                            
                            <li class="nav-item">
                                <a asp-controller="Account" asp-action="Register" class="nav-link">
                                    <i class="nav-icon bi bi-person-plus"></i>
                                    <p>ثبت نام</p>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </aside>
        
        <main class="app-main">
            <div class="app-content-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="mb-0">@ViewData["Title"]</h3>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-end">
                                <li class="breadcrumb-item"><a href="/">خانه</a></li>
                                @if (ViewContext.RouteData.Values["controller"] != null)
                                {
                                    <li class="breadcrumb-item active" aria-current="page">@ViewContext.RouteData.Values["controller"]</li>
                                }
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="app-content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </main>
        
        <footer class="app-footer">
            <div class="float-end d-none d-sm-inline">نسخه 1.0.0</div>
            <strong>
                Copyright &copy; @DateTime.UtcNow.Year&nbsp;
                <a href="/" class="text-decoration-none">EazyMenu</a>.
            </strong>
            تمامی حقوق محفوظ است.
        </footer>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/overlayscrollbars@2.11.0/browser/overlayscrollbars.browser.es6.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.min.js" crossorigin="anonymous"></script>
    <script src="~/lib/adminlte/js/adminlte.js"></script>
    
    <script>
        const SELECTOR_SIDEBAR_WRAPPER = '.sidebar-wrapper';
        const Default = {
            scrollbarTheme: 'os-theme-light',
            scrollbarAutoHide: 'leave',
            scrollbarClickScroll: true,
        };
        document.addEventListener('DOMContentLoaded', function () {
            const sidebarWrapper = document.querySelector(SELECTOR_SIDEBAR_WRAPPER);
            if (sidebarWrapper && typeof OverlayScrollbarsGlobal?.OverlayScrollbars !== 'undefined') {
                OverlayScrollbarsGlobal.OverlayScrollbars(sidebarWrapper, {
                    scrollbars: {
                        theme: Default.scrollbarTheme,
                        autoHide: Default.scrollbarAutoHide,
                        clickScroll: Default.scrollbarClickScroll,
                    },
                });
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
