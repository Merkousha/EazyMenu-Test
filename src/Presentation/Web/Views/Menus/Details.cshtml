@model EazyMenu.Web.Models.Menus.MenuDetailsViewModel
@using System.Linq
@using Microsoft.AspNetCore.Mvc.ViewFeatures

@{
    var defaultName = Model.Name.TryGetValue("fa-IR", out var faTitle)
        ? faTitle
        : Model.Name.Values.FirstOrDefault() ?? "منو";
    ViewData["Title"] ??= $"مدیریت {defaultName}";
}

<div class="container" dir="rtl" data-menu-details data-menu-id="@Model.MenuId">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-1">@defaultName</h1>
            <div class="d-flex flex-wrap gap-2">
                <span class="badge bg-light text-dark">کد منو: @Model.MenuId</span>
                <span class="badge bg-light text-dark">نسخه منتشرشده: <span data-published-version>v@Model.PublishedVersion</span></span>
                @if (Model.IsDefault)
                {
                    <span class="badge bg-success">منوی پیش‌فرض</span>
                }
                @if (Model.IsArchived)
                {
                    <span class="badge bg-secondary">آرشیو شده</span>
                }
            </div>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-action="Index">بازگشت به لیست</a>
            <button class="btn btn-primary" type="button" data-menu-action="publish-menu" data-menu-id="@Model.MenuId">انتشار تغییرات</button>
        </div>
    </div>

    <div id="menu-alerts" class="mb-3" role="alert"></div>

    <div class="row gy-4">
        <div class="col-12 col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0">
                    <h2 class="h5 mb-0">اطلاعات پایه</h2>
                </div>
                <div class="card-body">
                    <dl class="row mb-0 small text-muted">
                        <dt class="col-5">ایجاد شده</dt>
                        <dd class="col-7">@Model.CreatedAtUtc.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</dd>
                        <dt class="col-5">آخرین بروزرسانی</dt>
                        <dd class="col-7">@Model.UpdatedAtUtc.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</dd>
                    </dl>
                    <hr />
                    <div class="mb-3">
                        <h3 class="h6">نام‌های چندزبانه</h3>
                        <ul class="list-unstyled mb-0">
                            @foreach (var name in Model.Name)
                            {
                                <li class="d-flex justify-content-between align-items-center border rounded px-3 py-2 mb-2">
                                    <span class="badge bg-info text-dark">@name.Key</span>
                                    <span>@name.Value</span>
                                </li>
                            }
                        </ul>
                    </div>
                    @if (Model.Description is not null && Model.Description.Count > 0)
                    {
                        <div>
                            <h3 class="h6">توضیحات</h3>
                            <ul class="list-unstyled mb-0">
                                @foreach (var description in Model.Description)
                                {
                                    <li class="border rounded px-3 py-2 mb-2">
                                        <span class="badge bg-light text-dark">@description.Key</span>
                                        <p class="mb-0 mt-2">@description.Value</p>
                                    </li>
                                }
                            }
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="text-muted small">توضیحی برای این منو ثبت نشده است.</div>
                    }
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="h5 mb-0">دسته‌ها و آیتم‌ها</h2>
                <button class="btn btn-sm btn-outline-primary" type="button" data-menu-action="show-create-category">افزودن دسته جدید</button>
            </div>
            <div id="menu-category-create" class="card border-0 shadow-sm mb-4 collapse" data-menu-panel="category-create">
                <div class="card-body">
                    <form method="post" asp-controller="MenuCategories" asp-action="Create" asp-route-menuId="@Model.MenuId" data-menu-form="category-create">
                        @Html.AntiForgeryToken()
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label" for="new-category-fa">نام فارسی</label>
                                <input id="new-category-fa" class="form-control" name="Name.Fa" required />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label" for="new-category-en">نام انگلیسی</label>
                                <input id="new-category-en" class="form-control" name="Name.En" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label" for="new-category-ar">نام عربی</label>
                                <input id="new-category-ar" class="form-control" name="Name.Ar" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" for="new-category-icon">آیکون (URL)</label>
                                <input id="new-category-icon" class="form-control" name="IconUrl" />
                            </div>
                            <div class="col-md-6 d-flex justify-content-end align-items-end gap-2">
                                <button type="button" class="btn btn-outline-secondary" data-menu-action="hide-create-category">بستن</button>
                                <button type="submit" class="btn btn-success">افزودن دسته</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div id="menu-categories-wrapper">
                @if (!Model.Categories.Any())
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center py-5">
                            <h2 class="h5 mb-3">دسته‌ای برای این منو وجود ندارد</h2>
                            <p class="text-muted mb-0">برای شروع روی «افزودن دسته جدید» کلیک کنید تا اولین دسته ایجاد شود.</p>
                        </div>
                    </div>
                }
                else
                {
                    @await Html.PartialAsync("~/Views/Menus/Partials/_CategoryList.cshtml", Model.Categories, new ViewDataDictionary(ViewData)
                    {
                        ["MenuId"] = Model.MenuId,
                        ["TenantId"] = Model.TenantId
                    })
                }
            </div>
        </div>
    </div>

    <form id="menu-anti-forgery" class="d-none">
        @Html.AntiForgeryToken()
    </form>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js" integrity="sha384-u3F6UtBYX6iFc4aZe5evQgwK1d7XzVhuvqUvVfGP9E5WlmacCIUMVa4NoZ+LZp9d" crossorigin="anonymous"></script>
    <script src="~/js/menu-management.js" asp-append-version="true"></script>
}
