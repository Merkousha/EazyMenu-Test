@using System.Linq
@model EazyMenu.Web.Models.Menus.MenuDetailsViewModel
@{
    var defaultName = Model.Name.TryGetValue("fa-IR", out var faTitle)
        ? faTitle
        : Model.Name.Values.FirstOrDefault() ?? "منو";
    ViewData["Title"] ??= $"مدیریت {defaultName}";
}
<div class="container" dir="rtl">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-1">@defaultName</h1>
            <div class="d-flex flex-wrap gap-2">
                <span class="badge bg-light text-dark">کد منو: @Model.MenuId</span>
                <span class="badge bg-light text-dark">نسخه منتشرشده: v@Model.PublishedVersion</span>
                @if (Model.IsDefault)
                {
                    <span class="badge bg-success">منوی پیش‌فرض</span>
                }
                @if (Model.IsArchived)
                {
                    <span class="badge bg-secondary">آرشیو شده</span>
                }
            </div>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-action="Index">بازگشت به لیست</a>
            <button class="btn btn-primary" type="button" disabled title="به‌زودی">انتشار تغییرات</button>
        </div>
    </div>

    <div class="row gy-4">
        <div class="col-12 col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0">
                    <h2 class="h5 mb-0">اطلاعات پایه</h2>
                </div>
                <div class="card-body">
                    <dl class="row mb-0 small text-muted">
                        <dt class="col-5">ایجاد شده</dt>
                        <dd class="col-7">@Model.CreatedAtUtc.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</dd>
                        <dt class="col-5">آخرین بروزرسانی</dt>
                        <dd class="col-7">@Model.UpdatedAtUtc.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</dd>
                    </dl>
                    <hr />
                    <div class="mb-3">
                        <h3 class="h6">نام‌های چندزبانه</h3>
                        <ul class="list-unstyled mb-0">
                            @foreach (var name in Model.Name)
                            {
                                <li class="d-flex justify-content-between align-items-center border rounded px-3 py-2 mb-2">
                                    <span class="badge bg-info text-dark">@name.Key</span>
                                    <span>@name.Value</span>
                                </li>
                            }
                        </ul>
                    </div>
                    @if (Model.Description is not null && Model.Description.Count > 0)
                    {
                        <div>
                            <h3 class="h6">توضیحات</h3>
                            <ul class="list-unstyled mb-0">
                                @foreach (var description in Model.Description)
                                {
                                    <li class="border rounded px-3 py-2 mb-2">
                                        <span class="badge bg-light text-dark">@description.Key</span>
                                        <p class="mb-0 mt-2">@description.Value</p>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="text-muted small">توضیحی برای این منو ثبت نشده است.</div>
                    }
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-8">
            @if (!Model.Categories.Any())
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <h2 class="h5 mb-3">دسته‌ای برای این منو وجود ندارد</h2>
                        <p class="text-muted mb-0">برای افزودن دسته و آیتم از جریان فرمان‌ها در لایه Application استفاده کنید. نسخه UI کامل به‌زودی اضافه می‌شود.</p>
                    </div>
                </div>
            }
            else
            {
                @foreach (var category in Model.Categories)
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                            <div>
                                <h2 class="h5 mb-1">@GetLocalizedValue(category.Name)</h2>
                                <div class="text-muted small">ترتیب نمایش: @category.DisplayOrder</div>
                                <div class="d-flex gap-2 mt-2">
                                    @if (!string.IsNullOrWhiteSpace(category.IconUrl))
                                    {
                                        <span class="badge bg-light text-dark">آیکون: @category.IconUrl</span>
                                    }
                                    @if (category.IsArchived)
                                    {
                                        <span class="badge bg-secondary">آرشیو شده</span>
                                    }
                                </div>
                            </div>
                            <button class="btn btn-sm btn-outline-primary" type="button" disabled title="به‌زودی">افزودن آیتم</button>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table mb-0 align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th scope="col">آیتم</th>
                                            <th scope="col">قیمت پایه</th>
                                            <th scope="col">قیمت‌های کانال</th>
                                            <th scope="col">موجودی</th>
                                            <th scope="col">برچسب‌ها</th>
                                            <th scope="col">وضعیت</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var item in category.Items)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex flex-column">
                                                    <span class="fw-semibold">@GetLocalizedValue(item.Name)</span>
                                                    @if (item.Description is not null && item.Description.Count > 0)
                                                    {
                                                        <small class="text-muted">@GetLocalizedValue(item.Description)</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                @item.BasePrice.ToString("N0")
                                                <span class="text-muted small">@item.Currency</span>
                                            </td>
                                            <td>
                                                @if (item.ChannelPrices.Any())
                                                {
                                                    <ul class="list-unstyled mb-0 small">
                                                        @foreach (var price in item.ChannelPrices)
                                                        {
                                                            <li><span class="badge bg-light text-dark">@price.Key</span> @price.Value.ToString("N0")</li>
                                                        }
                                                    </ul>
                                                }
                                                else
                                                {
                                                    <span class="text-muted small">قیمت اضافی ثبت نشده است</span>
                                                }
                                            </td>
                                            <td>
                                                @DisplayInventory(item.Inventory)
                                            </td>
                                            <td>
                                                @if (item.Tags.Any())
                                                {
                                                    <div class="d-flex flex-wrap gap-2">
                                                        @foreach (var tag in item.Tags)
                                                        {
                                                            <span class="badge bg-info text-dark">@tag</span>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted small">برچسبی ثبت نشده</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.IsAvailable)
                                                {
                                                    <span class="badge bg-success">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">غیرفعال</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

@functions {
    private static string GetLocalizedValue(IDictionary<string, string> values)
    {
        if (values.TryGetValue("fa-IR", out var faValue) && !string.IsNullOrWhiteSpace(faValue))
        {
            return faValue;
        }

        var firstValue = values.Values.FirstOrDefault(value => !string.IsNullOrWhiteSpace(value));
        return firstValue ?? "--";
    }

    private static Microsoft.AspNetCore.Html.IHtmlContent DisplayInventory(EazyMenu.Web.Models.Menus.InventoryViewModel inventory)
    {
        var builder = new Microsoft.AspNetCore.Html.HtmlContentBuilder();
        if (string.Equals(inventory.Mode, "Infinite", System.StringComparison.OrdinalIgnoreCase))
        {
            builder.AppendHtml("<span class=\"badge bg-light text-dark\">نامحدود</span>");
            return builder;
        }

        builder.AppendHtml($"<div>{inventory.Quantity ?? 0} عدد</div>");
        if (inventory.Threshold.HasValue)
        {
            var thresholdClass = inventory.IsBelowThreshold ? "text-danger" : "text-muted";
            builder.AppendHtml($"<small class=\"{thresholdClass}\">آستانه هشدار: {inventory.Threshold.Value}</small>");
        }

        return builder;
    }
}
