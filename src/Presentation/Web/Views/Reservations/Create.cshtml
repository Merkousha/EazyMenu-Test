@model EazyMenu.Web.Models.Reservations.CreateReservationViewModel

@{
    ViewData["Title"] = "رزرو جدید";
    var daysOfWeek = new Dictionary<DayOfWeek, string>
    {
        { DayOfWeek.Saturday, "شنبه" },
        { DayOfWeek.Sunday, "یکشنبه" },
        { DayOfWeek.Monday, "دوشنبه" },
        { DayOfWeek.Tuesday, "سه‌شنبه" },
        { DayOfWeek.Wednesday, "چهارشنبه" },
        { DayOfWeek.Thursday, "پنج‌شنبه" },
        { DayOfWeek.Friday, "جمعه" }
    };
}

<div class="container" dir="rtl">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-1"><i class="bi bi-plus-circle"></i> رزرو جدید</h1>
            <p class="text-muted mb-0 small">ثبت رزرو میز برای مشتری</p>
        </div>
        <div>
            <a class="btn btn-outline-secondary" asp-action="Index">
                <i class="bi bi-arrow-right"></i> بازگشت به لیست
            </a>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="CustomerName" class="form-label">
                            <i class="bi bi-person-fill"></i> نام مشتری
                        </label>
                        <input asp-for="CustomerName" class="form-control" placeholder="نام و نام خانوادگی" />
                        <span asp-validation-for="CustomerName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="CustomerPhone" class="form-label">
                            <i class="bi bi-telephone-fill"></i> شماره تماس
                        </label>
                        <input asp-for="CustomerPhone" class="form-control" placeholder="09123456789" dir="ltr" />
                        <span asp-validation-for="CustomerPhone" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="DayOfWeek" class="form-label">
                            <i class="bi bi-calendar3"></i> روز هفته
                        </label>
                        <select asp-for="DayOfWeek" class="form-select">
                            <option value="">انتخاب کنید</option>
                            @foreach (var day in daysOfWeek)
                            {
                                <option value="@((int)day.Key)">@day.Value</option>
                            }
                        </select>
                        <span asp-validation-for="DayOfWeek" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="StartTime" class="form-label">
                            <i class="bi bi-clock"></i> ساعت شروع
                        </label>
                        <input asp-for="StartTime" type="time" class="form-control" />
                        <span asp-validation-for="StartTime" class="text-danger small"></span>
                        <small class="form-text text-muted">فرمت: HH:mm (مثال: 19:30)</small>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="EndTime" class="form-label">
                            <i class="bi bi-clock-fill"></i> ساعت پایان
                        </label>
                        <input asp-for="EndTime" type="time" class="form-control" />
                        <span asp-validation-for="EndTime" class="text-danger small"></span>
                        <small class="form-text text-muted">فرمت: HH:mm (مثال: 21:30)</small>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="PartySize" class="form-label">
                            <i class="bi bi-people-fill"></i> تعداد نفرات
                        </label>
                        <input asp-for="PartySize" type="number" class="form-control" min="1" max="50" placeholder="تعداد افراد" />
                        <span asp-validation-for="PartySize" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="TableId" class="form-label">
                            <i class="bi bi-table"></i> میز
                        </label>
                        <select asp-for="TableId" class="form-select">
                            <option value="">انتخاب میز</option>
                            @if (Model?.AvailableTables != null)
                            {
                                @foreach (var table in Model.AvailableTables)
                                {
                                    <option value="@table.TableId">
                                        @table.Label - ظرفیت: @table.Capacity نفر
                                        @(table.IsOutdoor ? " (فضای باز)" : " (داخل سالن)")
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="TableId" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <div class="form-check">
                            <input asp-for="PrefersOutdoor" class="form-check-input" type="checkbox" />
                            <label asp-for="PrefersOutdoor" class="form-check-label">
                                <i class="bi bi-tree-fill"></i> ترجیح فضای باز
                            </label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="SpecialRequest" class="form-label">
                            <i class="bi bi-chat-left-dots"></i> درخواست ویژه
                        </label>
                        <textarea asp-for="SpecialRequest" class="form-control" rows="3" 
                                  placeholder="توضیحات اضافی (اختیاری)"></textarea>
                        <span asp-validation-for="SpecialRequest" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-flex gap-2 justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> انصراف
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> ثبت رزرو
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
