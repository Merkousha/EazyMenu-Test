@model EazyMenu.Web.ViewModels.Orders.OrderDetailsViewModel
@{
    ViewData["Title"] = $"سفارش {Model.OrderNumber}";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">سفارش‌ها</a>
                    </li>
                    <li class="breadcrumb-item active">@Model.OrderNumber</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-bag-check me-2"></i>
                            سفارش @Model.OrderNumber
                        </h5>
                        <span class="@Model.StatusBadgeClass fs-6">
                            @Model.Status
                        </span>
                    </div>
                </div>

                <div class="card-body">
                    <h6 class="border-bottom pb-2 mb-3">آیتم‌های سفارش</h6>
                    
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-light">
                                <tr>
                                    <th>نام</th>
                                    <th class="text-center">تعداد</th>
                                    <th class="text-end">قیمت واحد</th>
                                    <th class="text-end">جمع</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.DisplayName</strong>
                                            @if (!string.IsNullOrEmpty(item.Note))
                                            {
                                                <br />
                                                <small class="text-muted">
                                                    <i class="bi bi-chat-left-text"></i>
                                                    @item.Note
                                                </small>
                                            }
                                        </td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@item.UnitPrice.ToString("N0") تومان</td>
                                        <td class="text-end">
                                            <strong>@item.TotalAmount.ToString("N0") تومان</strong>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>جمع آیتم‌ها:</strong></td>
                                    <td class="text-end">@Model.SubtotalAmount.ToString("N0") تومان</td>
                                </tr>
                                @if (Model.TaxAmount > 0)
                                {
                                    <tr>
                                        <td colspan="3" class="text-end">مالیات:</td>
                                        <td class="text-end">@Model.TaxAmount.ToString("N0") تومان</td>
                                    </tr>
                                }
                                @if (Model.DeliveryFee > 0)
                                {
                                    <tr>
                                        <td colspan="3" class="text-end">هزینه ارسال:</td>
                                        <td class="text-end">@Model.DeliveryFee.ToString("N0") تومان</td>
                                    </tr>
                                }
                                <tr class="table-active">
                                    <td colspan="3" class="text-end"><strong>مبلغ کل:</strong></td>
                                    <td class="text-end">
                                        <strong class="fs-5 text-primary">
                                            @Model.TotalAmount.ToString("N0") تومان
                                        </strong>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.CustomerNote))
                    {
                        <div class="alert alert-info mt-3">
                            <strong><i class="bi bi-chat-left-quote me-2"></i>یادداشت مشتری:</strong>
                            <p class="mb-0 mt-2">@Model.CustomerNote</p>
                        </div>
                    }
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.CancellationReason))
            {
                <div class="card shadow-sm border-danger mb-4">
                    <div class="card-header bg-danger text-white">
                        <i class="bi bi-x-circle me-2"></i>
                        دلیل لغو
                    </div>
                    <div class="card-body">
                        @Model.CancellationReason
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white border-bottom">
                    <h6 class="mb-0">
                        <i class="bi bi-person me-2"></i>
                        اطلاعات مشتری
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small">نام:</label>
                        <div><strong>@Model.CustomerName</strong></div>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted small">تلفن:</label>
                        <div>
                            <a href="tel:@Model.CustomerPhone" class="text-decoration-none">
                                <i class="bi bi-telephone me-1"></i>
                                @Model.CustomerPhone
                            </a>
                        </div>
                    </div>
                    <div>
                        <label class="text-muted small">نوع تحویل:</label>
                        <div><strong>@Model.FulfillmentMethod</strong></div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white border-bottom">
                    <h6 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>
                        زمان‌بندی
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small">ثبت سفارش:</label>
                        <div>@Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")</div>
                    </div>
                    @if (Model.ConfirmedAt.HasValue)
                    {
                        <div class="mb-3">
                            <label class="text-muted small">تأیید:</label>
                            <div>@Model.ConfirmedAt.Value.ToString("yyyy/MM/dd HH:mm")</div>
                        </div>
                    }
                    @if (Model.CompletedAt.HasValue)
                    {
                        <div class="mb-3">
                            <label class="text-muted small">تکمیل:</label>
                            <div>@Model.CompletedAt.Value.ToString("yyyy/MM/dd HH:mm")</div>
                        </div>
                    }
                    @if (Model.CancelledAt.HasValue)
                    {
                        <div>
                            <label class="text-muted small">لغو:</label>
                            <div>@Model.CancelledAt.Value.ToString("yyyy/MM/dd HH:mm")</div>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h6 class="mb-0">
                        <i class="bi bi-gear me-2"></i>
                        عملیات
                    </h6>
                </div>
                <div class="card-body d-grid gap-2">
                    @if (Model.CanConfirm)
                    {
                        <form asp-action="Confirm" asp-route-id="@Model.OrderId" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-check-circle me-2"></i>
                                تأیید سفارش
                            </button>
                        </form>
                    }

                    @if (Model.CanComplete)
                    {
                        <form asp-action="Complete" asp-route-id="@Model.OrderId" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-check-circle-fill me-2"></i>
                                تکمیل سفارش
                            </button>
                        </form>
                    }

                    @if (Model.CanCancel)
                    {
                        <button type="button" class="btn btn-danger w-100" 
                                data-bs-toggle="modal" data-bs-target="#cancelModal">
                            <i class="bi bi-x-circle me-2"></i>
                            لغو سفارش
                        </button>
                    }

                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-arrow-right me-2"></i>
                        بازگشت به لیست
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Cancel Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Cancel" asp-route-id="@Model.OrderId" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">لغو سفارش</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        آیا از لغو این سفارش اطمینان دارید؟
                    </div>
                    <div class="mb-3">
                        <label for="reason" class="form-label">دلیل لغو (اختیاری):</label>
                        <textarea class="form-control" id="reason" name="reason" rows="3" 
                                  placeholder="دلیل لغو سفارش را وارد کنید..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-x-circle me-2"></i>
                        تأیید لغو
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
